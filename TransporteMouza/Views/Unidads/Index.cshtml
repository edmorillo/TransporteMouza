@model IEnumerable<TransporteMouza.Models.Unidad>

@{
    ViewData["Title"] = "Index";
}

<h1>Unidades</h1>

<p>
    <a asp-action="Crear" class="btn btn-success">Crear</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMarca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AñoUnidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CapacidadCarga)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdChoferes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FecCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FecMantenimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kilometros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoDocumentacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoUnidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMarca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AñoUnidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapacidadCarga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdChoferes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FecCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FecMantenimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kilometros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoDocumentacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoUnidad)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.IdUnidad">Edit</a> <br>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdUnidad">Details</a> <br>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdUnidad">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
